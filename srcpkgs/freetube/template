# Template file for 'freetube'
pkgname=freetube
version=0.23.13
revision=0
only_for_archs="x86_64"
hostmakedepends="tar xz"
short_desc="An open source desktop YouTube player built with privacy in mind."
maintainer="Naz <ndpm13@ch-naseem.com>"
license="AGPL-3.0"
homepage="https://freetubeapp.io/"
distfiles="https://github.com/FreeTubeApp/FreeTube/releases/download/v${version}-beta/freetube_${version}_beta_amd64.deb"
checksum=c7e9371a794cdc4e065471bb19b424bc36f20f3531b9d8c0b6f25e21f5db14f7
nostrip=yes

do_extract() {
  mkdir -p ${DESTDIR}
  ar x ${XBPS_SRCDISTDIR}/${pkgname}-${version}/freetube_${version}_beta_amd64.deb
  tar xf data.tar.xz -C ${DESTDIR}
}

do_install() {
	vmkdir usr/bin
  ln -sf /opt/FreeTube/freetube ${DESTDIR}/usr/bin/freetube
  # Cleanup up
  rm -rf ${DESTDIR}/etc
}
