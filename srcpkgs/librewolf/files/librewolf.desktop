[Desktop Entry]
Type=Application
Name=LibreWolf
GenericName=Web Browser
StartupNotify=true
Terminal=false
MimeType=application/json;application/pdf;application/rdf+xml;application/rss+xml;application/xhtml+xml;application/xhtml_xml;application/xml;image/gif;image/jpeg;image/png;image/webp;text/html;text/xml;x-scheme-handler/http;x-scheme-handler/https;
Comment=Browse the World Wide Web
Categories=Network;WebBrowser;Security;
StartupWMClass=librewolf
Exec=/usr/lib/librewolf/librewolf %u
Icon=librewolf

Actions=new-window;new-private-window;profile-manager-window;safe-mode;preferences;

[Desktop Action new-window]
Name=New Window
Exec=/usr/lib/librewolf/librewolf
[Desktop Action new-private-window]
Name=New Private Window
Exec=/usr/lib/librewolf/librewolf --private-window %u
[Desktop Action profile-manager-window]
Name=Open the Profile Manager
Exec=/usr/lib/librewolf/librewolf --ProfileManager
[Desktop Action safe-mode]
Name=Start in Safe Mode
Exec=/usr/lib/librewolf/librewolf --safe-mode
[Desktop Action preferences]
Name=Show Preferences
Exec=/usr/lib/librewolf/librewolf --preferences
