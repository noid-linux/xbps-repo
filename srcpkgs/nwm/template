# Template file for 'nwm'
pkgname=nwm
version=6.7
revision=1
makedepends="libXinerama-devel libXft-devel freetype-devel"
short_desc="Custom Build of DWM - a Dynamic window manager for X"
maintainer="Naz <ndpm13@ch-naseem.com>"
license="MIT"
homepage="https://git.ch-naseem.com/ndpm13/dwm"
distfiles="https://dl.suckless.org/dwm/dwm-${version}.tar.gz"
checksum=91ffbaa148bf63e965b21eb94597edbba53431c19f5061874e04ef3c58c1f192
conflicts="dwm>=0"
replaces="dwm>=0"

do_build() {
	[ -e ${FILESDIR}/config.h ] && cp ${FILESDIR}/config.h config.h
	vsed -e "/CFLAGS/s|\${CPPFLAGS}|& $CFLAGS|g" -i config.mk
	make CC=$CC INCS="-I. -I${XBPS_CROSS_BASE}/usr/include/freetype2"
}

do_install() {
	make PREFIX=/usr DESTDIR=$DESTDIR install
	vinstall ${FILESDIR}/dwm.desktop 644 usr/share/xsessions
	vlicense LICENSE
}
